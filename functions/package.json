{
    "name": "functions",
    "scripts": {
        "build": "tsc",
        "serve": "npm run build && firebase serve --only functions",
        "shell": "npm run build && firebase functions:shell",
        "use:dev": "firebase use instantvisio-dev",
        "serve:emulators": "npm run use:dev && FIREBASE_AUTH_EMULATOR_HOST=localhost:9099 npm run build && firebase emulators:start --only firestore,auth,functions",
        "serve:watch": "npm run use:dev && FIREBASE_AUTH_EMULATOR_HOST=localhost:9099 npm run build && firebase emulators:exec --ui --only functions,firestore,auth 'npm run seed:db && npm run watch'",
        "seed:db": "curl --location --request GET 'http://localhost:5050/instantvisio-dev/us-central1/api/api/v1-tests/seeds/'",
        "init:emulators": "firebase init emulators",
        "watch": "tsc --watch --preserveWatchOutput",
        "start": "npm run shell",
        "test": "jest",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log",
        "copyMessageTranslations": "node scripts/copyPublicMessageToFunctions.js"
    },
    "engines": {
        "node": "10"
    },
    "main": "lib/index.js",
    "dependencies": {
        "@sendgrid/mail": "^6.5.5",
        "@types/jest": "^26.0.15",
        "async-middleware": "^1.2.1",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "firebase-admin": "^9.4.2",
        "firebase-functions": "^3.11.0",
        "firebase-tools": "^8.17.0",
        "full-icu": "^1.3.1",
        "jsonwebtoken": "^8.5.1",
        "libphonenumber-js": "^1.7.48",
        "lodash": "^4.17.21",
        "luxon": "^1.25.0",
        "node-fetch": "^2.6.1",
        "ovh": "^2.0.3",
        "swagger-jsdoc": "^5.0.1",
        "swagger-ui-express": "4.1.5",
        "ts-custom-error": "^3.2.0",
        "twilio": "^3.52.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.6",
        "@types/express": "^4.17.8",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/luxon": "^1.25.0",
        "@types/node-fetch": "^2.5.5",
        "@types/nodemailer": "^6.4.0",
        "@types/sinon": "^9.0.8",
        "@types/swagger-jsdoc": "^3.0.2",
        "@types/swagger-ui-express": "^4.1.2",
        "firebase": "^8.1.1",
        "firebase-functions-test": "^0.1.7",
        "jest": "^26.6.3",
        "supertest": "^6.0.1",
        "ts-jest": "^26.4.4",
        "tslint": "^6.1.3",
        "typescript": "^4.0.5"
    },
    "private": true
}
